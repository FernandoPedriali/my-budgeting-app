{
    // ===== PYTHON INTERPRETER =====
    "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    // ===== PATHS E IMPORTS =====
    "python.analysis.extraPaths": [
        "./frontend_nicegui"
    ],
    "python.autoComplete.extraPaths": [
        "./frontend_nicegui"
    ],
    // ===== LINTING (Pylint) =====
    // Configurações detalhadas estão no pyproject.toml
    "pylint.args": [
        "--init-hook",
        "import sys; sys.path.append('frontend_nicegui')"
    ],
    // ===== FORMATTING =====
    "editor.formatOnSave": true,
    "python.formatting.provider": "none",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.rulers": [
            88,
            120
        ]
    },
    // ===== BLACK E ISORT =====
    // Configurações ficam no pyproject.toml
    // Aqui só definimos o comportamento do VSCode
    // ===== TESTING =====
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],
    // ===== TYPE CHECKING =====
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    // ===== ARQUIVOS EXCLUÍDOS DO EXPLORER =====
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/*.egg-info": true
    },
    // ===== CONFIGURAÇÕES GERAIS DO EDITOR =====
    "editor.rulers": [
        80,
        120
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",
    // ===== TERMINAL =====
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/frontend_nicegui"
    },
    // ===== GIT =====
    "git.ignoreLimitWarning": true,
    // ===== EXTENSÕES ESPECÍFICAS =====
    "autoDocstring.docstringFormat": "google",
    "python.languageServer": "Pylance"
}
